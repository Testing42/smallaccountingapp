<DataErrorPopup>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Please enter Quantity as a whole number.\nPlease enter Name as a string.\nPlease enter Stock as an integer.\nPlease enter price as a float example 12.00\nPlease enter all values leave nothing blank\nPlease leave no spaces inbetween the digits"
        BoxLayout:
            Button:
                size_hint_y: None
                height: 50
                text: "Cancel"
                on_release:
                    root.dismiss_popup()
    